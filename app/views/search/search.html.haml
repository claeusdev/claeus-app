
.page
	.section
		%article.white
			%br/
			.section-header Search Results
			.wrapper
				.row
					- if @products.empty?
						.col-full
							.headline Sorry, no products match your search
							.dummy{style: "background-image: url(#{image_path 'cart.png'})"}
						

					- else
						- @products.each do |p| 
							.col-half
								.comment
									.comment-image
										%img{:src => "#{p.image.url(:medium)}", :alt => ""}/
									.comment-content
										%h1= link_to p.name, store_product_path(p.store, p)
										%p.price= number_to_currency(p.price, unit: 'GHC')
										%p.comment-detail= link_to p.store.name, store_path(p.store) 
 
								
				= paginate @products
									
					





