<%= form_with(model: subcategory, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
		<%= f.collection_select :category_id, Category.order(:name), :id, :name, {}, include_blank: true, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-input" %>
  </div>

  <%= f.submit class: "btn btn-danger"%>
<% end %>