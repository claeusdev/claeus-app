<div class="section">
  <div class="page">
    <article class="white">
      <div class="box">
        <div class="section-header">Discover awesome emerging brands</div>
        <p>Join Claeus to discover awesome products, like and follow amazing brands or start your own brand.</p>
        <div class="sign-up-form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            
            <div class="form-group">
              <%= f.text_field :full_name, autofocus: true, class: "form-input", placeholder: "Full Name" %>
            </div>
            
            <div class="form-group">
              <%= f.text_field :username, class: "form-input", placeholder: "Username" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, class: "form-input", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-input", placeholder: "Password" %>
              <% if @minimum_password_length %>
              <small>(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input", placeholder: "Confirm Password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>
          <div class="form-divider"></div>

          <div class="form-note">
            <p>Already have an account?</p>
            <%= render "devise/shared/links" %>
          </div>
        </div> 
      </div>
      
    </article>
  </div>
</div>
